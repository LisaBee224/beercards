
<h1><%= @deck.name %></h1>

<% if @right %>
  <p>You got it right!</p>
<% elsif @wrong %>
  <p>Wrong! Try again later!</p>
<% end %>

<%= @card_display.question %>

<form method ="post" action="/round/<%=@round.id%>/guess">
  <input type ="hidden" name ="guess[round_id]" value= "<%=@round.id %>">
  <input type="hidden" name = "guess[card_id]" value= "<%=@card_display.id %>">
<input type = "text" name = "guess[guess_name]">
<input type = "submit" value = "submit answer">
</form>
